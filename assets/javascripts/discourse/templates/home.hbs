{{#d-section class="landing" pageClass="home"}}
  <div class="first">
    {{#if topics}}
      <div class="topics-title">
        <span class="text">
          {{i18n 'home.latest_topics'}}
        </span>
        {{category-link category}}
      </div>
      
      {{topic-list topics=topics
                   hideCategory=true
                   skipHeader=true}}
    {{else}}
      <div class="home-image"></div>
      <div class="site-title">
        {{siteSettings.pavilion_home_site_title}}
      </div>
      <div class="home-title">
        <span>{{siteSettings.pavilion_home_site_description}}</span>
        <a href="mailto:{{siteSettings.contact_email}}" class="home-cta" target="_blank">
          {{siteSettings.pavilion_home_cta}}
        </a>
      </div>
    {{/if}}
  </div>

  <div class="landing-block">
    <div class="home-title">
      <a name="members" href="#members">Featured Members</a>
    </div>
    <div class="home-profiles">
      {{#each teamMembers as |tm|}}
        {{team-user-card user=tm}}
      {{/each}}
    </div>
  </div>
{{/d-section}}
